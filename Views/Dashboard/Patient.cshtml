    {
        strHeight = (NurseInfo[0]["Height"] == DBNull.Value) ? "" : NurseInfo[0]["Height"].ToString();
        strWeight = (NurseInfo[0]["Weight"] == DBNull.Value) ? "" : NurseInfo[0]["Weight"].ToString();

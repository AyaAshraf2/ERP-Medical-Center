        strAilments = (NurseInfo[0]["Ailments"] == DBNull.Value) ? "" : NurseInfo[0]["Ailments"].ToString();
        strDrug = (NurseInfo[0]["Medicine"] == DBNull.Value) ? "" : NurseInfo[0]["Medicine"].ToString();
